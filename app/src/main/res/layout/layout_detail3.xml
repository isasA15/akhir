<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5D9F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#EECAD5"
        android:elevation="10dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="0dp"
        android:clipToOutline="true"
        app:cardCornerRadius="16dp">

        <TextView
            android:id="@+id/namedetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fujifilm Instax Mini 11 Camera Details"
            android:textSize="24sp"
            android:textColor="#333333"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            android:scaleType="centerCrop"
            android:layout_marginStart="8dp"
            android:backgroundTint="#FFFFFF"
            android:elevation="6dp"
            android:clipToOutline="true" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/cameraFrame"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="8dp"
        android:backgroundTint="#00000000"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/cameraImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/camera"
            android:scaleType="centerCrop"
            android:contentDescription="Fujifilm Instax Mini 11 Camera"
            android:clipToOutline="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cameradetail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cameraFrame"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EECAD5"
            android:padding="16dp">

            <TextView
                android:id="@+id/detailitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fujifilm Instax Mini 11"
                android:textSize="24sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A compact instant camera that produces credit card-sized prints. Known for its ease of use and automatic exposure adjustment, making it perfect for fun snapshots on the go."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8EACCD"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:elevation="6dp" />
</RelativeLayout>
